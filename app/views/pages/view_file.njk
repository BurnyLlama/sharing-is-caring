{% extends "templates/base.njk" %}

{% block main %}
    <h1 class="filename">{{ file.name }}</h1>


    {% if file.mimetype.startsWith("image") %}
        <img src="/file/download/{{ file.id.toString(16) }}">
    {% endif %}

    <div class="flex">
        <a class="btn" href="/file/download/{{ file.id.toString(16) }}" download="{{ file.name }}">Download file!</a>
        <a class="btn" href="/file">Upload a file!</a>
        <a class="btn secondary" href="/">Go back!</a>
    </div>
{% endblock %}